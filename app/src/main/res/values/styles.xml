<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme" />

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/dialog_style</item>
        <item name="colorAccent">@color/progress_indicator</item>
        <!--<item name="android:maxWidth">@dimen/diasize</item>-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RecipeDetailButton.Done">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="RecipeDetailButton.Next">
        <item name="android:src">@drawable/wel_ic_chevron_right_white_24dp</item>
        <item name="android:tint">?android:attr/textColorPrimary</item>
    </style>

    <style name="RecipeDetailButton.Prev">
        <item name="android:src">@drawable/wel_ic_chevron_left_white_24dp</item>
        <item name="android:tint">?android:attr/textColorPrimary</item>
    </style>

    <style name="RecipeDetailButton" parent="Widget.AppCompat.Button">
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/wel_flat_button_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/wel_flat_button_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/wel_flat_button_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/wel_flat_button_vertical_margin</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>

        <item name="android:background">@drawable/wel_button_borderless_background</item>
        <item name="android:padding">4dp</item>
    </style>


    <style name="WelcomeScreenDivider">
        <item name="android:background">#00000000</item>
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="WelcomeScreenDivider.Light">
        <item name="android:background">@color/divider_color_theme_light</item>
    </style>

    <style name="WelcomeScreenDivider.Dark">
        <item name="android:background">@color/divider_color_theme_dark</item>
    </style>


    <style name="BakingAppText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:layout_marginRight">@dimen/wel_text_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/wel_text_horizontal_margin</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="BakingAppText.EmptyText">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/empty_recipe_list</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BakingAppText.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">@dimen/wel_title_bottom_margin</item>
    </style>


    <style name="BakingAppText.Title" parent="BakingAppText.Large">
        <item name="android:textSize">@dimen/wel_title_text_size</item>
    </style>

    <style name="BakingAppText.Centered">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="BakingAppText.Large.Centered">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="BakingAppText.Title.Centered">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="BakingAppText.Large.Retry">
        <item name="android:text">@string/retry</item>
    </style>

    <style name="Wel_TextContainer">
        <item name="android:paddingTop">@dimen/wel_text_top_padding</item>
        <item name="android:paddingBottom">@dimen/wel_text_bottom_padding</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Wel_TransparentActionBar" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="BakingAppText.indicator">

        <item name="android:textSize">20sp</item>
    </style>

    <style name="MediaButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/media_button_width</item>
        <item name="android:layout_height">@dimen/media_button_height</item>
    </style>

    <style name="MediaButton.ExitFullScreen">
        <item name="android:src">@drawable/ic_fullscreenexit</item>
        <item name="android:contentDescription">@string/control_view_exit_fullscreen_description
        </item>
    </style>

    <style name="MediaButton.FullScreen">
        <item name="android:src">@drawable/ic_fullscreen</item>
        <item name="android:contentDescription">@string/control_view_fullscreen_description</item>
    </style>

    <style name="MediaButton.More">
        <item name="android:src">@drawable/ic_more</item>
        <item name="android:contentDescription">@string/control_view_more_description</item>
    </style>

    <style name="MediaButton.Retry">
        <item name="android:src">@drawable/ic_retry_01</item>
        <item name="android:contentDescription">@string/control_view_retry_description</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="MediaControllerText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">#FFBEBEBE</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <dimen name="media_button_height">72dp</dimen>
    <dimen name="media_button_width">50dp</dimen>
</resources>
