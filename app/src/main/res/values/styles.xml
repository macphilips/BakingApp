<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Dialog" parent="Theme.AppCompat" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RecipeDetailButton.Done">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="RecipeDetailButton.Next">
        <item name="android:src">@drawable/wel_ic_chevron_right_white_24dp</item>
        <item name="android:tint">?android:attr/textColorPrimary</item>
    </style>

    <style name="RecipeDetailButton.Prev">
        <item name="android:src">@drawable/wel_ic_chevron_left_white_24dp</item>
        <item name="android:tint">?android:attr/textColorPrimary</item>
    </style>

    <style name="RecipeDetailButton" parent="Widget.AppCompat.Button">
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/wel_flat_button_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/wel_flat_button_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/wel_flat_button_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/wel_flat_button_vertical_margin</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>

        <item name="android:background">@drawable/wel_button_borderless_background</item>
        <item name="android:padding">4dp</item>
    </style>


    <style name="WelcomeScreenDivider">
        <item name="android:background">#00000000</item>
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="WelcomeScreenDivider.Light">
        <item name="android:background">@color/wel_divider_color_theme_light</item>
    </style>

    <style name="WelcomeScreenDivider.Dark">
        <item name="android:background">@color/wel_divider_color_theme_dark</item>
    </style>


    <style name="WelcomeScreenText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:layout_marginRight">@dimen/wel_text_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/wel_text_horizontal_margin</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="WelcomeScreenText.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_marginBottom">@dimen/wel_title_bottom_margin</item>
    </style>

    <style name="WelcomeScreenText.Title" parent="WelcomeScreenText.Large">
        <item name="android:textSize">@dimen/wel_title_text_size</item>
    </style>

    <style name="WelcomeScreenText.Centered">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="WelcomeScreenText.Large.Centered">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="WelcomeScreenText.Title.Centered">
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="WelcomeScreenText.Large.Retry">
        <item name="android:text">@string/retry</item>
    </style>

    <style name="Wel_TextContainer">
        <item name="android:paddingTop">@dimen/wel_text_top_padding</item>
        <item name="android:paddingBottom">@dimen/wel_text_bottom_padding</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Wel_TransparentActionBar" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:background">@color/wel_transparent</item>
    </style>

    <style name="WelcomeScreenText.indicator">

        <item name="android:textSize">20sp</item>
    </style>


    <style name="ExoMediaButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/exo_media_button_width</item>
        <item name="android:layout_height">@dimen/exo_media_button_height</item>
    </style>

    <style name="ExoMediaButton.Previous">
        <item name="android:src">@drawable/exo_controls_previous</item>
        <item name="android:contentDescription">@string/exo_controls_previous_description</item>
    </style>

    <style name="ExoMediaButton.Next">
        <item name="android:src">@drawable/exo_controls_next</item>
        <item name="android:contentDescription">@string/exo_controls_next_description</item>
    </style>

    <style name="ExoMediaButton.FastForward">
        <item name="android:src">@drawable/exo_controls_fastforward</item>
        <item name="android:contentDescription">@string/exo_controls_fastforward_description</item>
    </style>

    <style name="ExoMediaButton.Rewind">
        <item name="android:src">@drawable/exo_controls_rewind</item>
        <item name="android:contentDescription">@string/exo_controls_rewind_description</item>
    </style>

    <style name="ExoMediaButton.Play">
        <item name="android:src">@drawable/exo_controls_play</item>
        <item name="android:contentDescription">@string/exo_controls_play_description</item>
    </style>

    <style name="ExoMediaButton.Pause">
        <item name="android:src">@drawable/exo_controls_pause</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>

    <style name="ExoMediaButton.ExitFullScreen">
        <item name="android:src">@drawable/ic_fullscreenexit</item>
        <item name="android:contentDescription">@string/exo_controls_exit_fullscreen_description
        </item>
    </style>

    <style name="ExoMediaButton.FullScreen">
        <item name="android:src">@drawable/ic_fullscreen</item>
        <item name="android:contentDescription">@string/exo_controls_fullscreen_description</item>
    </style>

    <style name="ExoMediaButton.More">
        <item name="android:src">@drawable/ic_more</item>
        <item name="android:contentDescription">@string/exo_more_description</item>
    </style>

    <style name="ExoMediaButton.Retry">
        <item name="android:src">@drawable/ic_retry_01</item>
        <item name="android:contentDescription">@string/exo_retry_description</item></style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>



</resources>
